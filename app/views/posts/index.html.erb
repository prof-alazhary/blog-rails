<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table border="2">
  <thead>
    <tr>
      <th>Titel</th>
      <th>Content</th>
      <th>User</th>
      <th colspan="3">Optinos</th>
    </tr>
  </thead>

  <tbody>

    <!--<%= @user.inspect %>-->
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.titel %></td>
        <td><%= post.content %></td>
        <td><%= post.user.name %></td>
        <td><%= link_to 'Show', [@user,post] %></td>
        <td><%= link_to 'Edit', {:controller=>'posts',:action=>'edit',:id=>post.id,:user_id=>@user.id} %></td>
        <td><%= link_to 'Destroy', [@user,post], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_user_post_path %>
